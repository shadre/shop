<div class="container">
  <h3><%= product.name %></h3>
  <p>Price: <%= '%.02f' % product.price %> EUR</p>
  <p>Quantity available: <%= stock_item.level %></p>
</div>
<form action="/basket/new" method="post">
  <div class="col-xs-3">
    <input type ="hidden" name="product_id" value=<%= product.id %>>
    <input class="form-control" type="number" name="quantity" min="1" value="1">
    <input class="btn btn-default" type="submit" value="Add to my basket">
  </div>
</form>
  <div class="container">
    <a class="btn btn-default btn-lg" href="/" role="button">Go back</a>
  </div>
